<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E6"
    android:id="@+id/login"
    tools:context=".ui.LoginActivity">

    <!-- ðŸ”· Background Atas -->
    <ImageView
        android:id="@+id/topBackground"
        android:layout_width="414dp"
        android:layout_height="327dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_register_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”³ CardView Login -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="8dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <!-- ðŸ–‹ Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:text="Sign In"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- ðŸ“¥ Email -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <!-- ðŸ”’ Password -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <!-- ðŸ”˜ Tombol Login -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signInButton"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#5D9BFF"
                    android:text="Sign In"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <!-- ðŸ”‘ Forgot Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:text="Forgot your password?"
                android:textColor="#5D9BFF"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸŒ Google & Facebook Buttons -->
    <LinearLayout
        android:id="@+id/socialLogin"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formCard">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:icon="@drawable/ic_google"
            app:iconSize="30dp"
            app:cornerRadius="20dp"
            app:iconTintMode="multiply" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Facebook"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:icon="@drawable/ic_facebook"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />
    </LinearLayout>

    <!-- âœï¸ Sign Up Link -->
    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="#000000"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintVertical_bias="0.139" />

</androidx.constraintlayout.widget.ConstraintLayout>
