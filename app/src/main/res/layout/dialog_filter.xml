<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_filter"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Breed -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <GridLayout
        android:id="@+id/breed_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <RadioButton
            android:text="Labrador"
            android:id="@+id/breed1"
            android:buttonTint="@color/blue_primary"/>
        <RadioButton
            android:text="Poodle"
            android:buttonTint="@color/blue_primary"/>
        <RadioButton
            android:text="Doberman"
            android:buttonTint="@color/blue_primary"/>
        <RadioButton
            android:text="Pomeranian"
            android:buttonTint="@color/blue_primary"/>
        <RadioButton android:text="Pug"
            android:buttonTint="@color/blue_primary"/>
    </GridLayout>

    <!-- Size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/size_group"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RadioButton
            android:id="@+id/size_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue_primary"
            android:text="M"/>
        <RadioButton
            android:id="@+id/size_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue_primary"
            android:text="L"/>
        <RadioButton
            android:id="@+id/size_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue_primary"
            android:text="XL"/>
    </RadioGroup>

    <!-- Age Range -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age Range"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <SeekBar
        android:id="@+id/age_range_end"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:max="40"
        android:progress="40"
        android:progressTint="@color/blue_primary"
        android:thumbTint="@color/blue_primary" />

    <!-- Tambahan angka 1 dan 40 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Nearby Toggle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show only nearest pet around me" />

        <Switch
            android:id="@+id/switch_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_color"
            android:trackTint="@color/switch_track_color"
            />
    </LinearLayout>

    <!-- Search Button -->
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAllCaps="false"
        android:backgroundTint="@color/blue_paw"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>
