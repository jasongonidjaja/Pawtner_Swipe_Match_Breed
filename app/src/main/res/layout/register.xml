<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E6"
    android:id="@+id/register"
    tools:context=".ui.RegisterActivity">


    <!-- 🔷 Background atas bergelombang -->
    <ImageView
        android:id="@+id/topBackground"
        android:layout_width="414dp"
        android:layout_height="327dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_register_top"
        app:layout_constraintDimensionRatio="411:430"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🔳 Card putih untuk form register -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <!-- 🖋 Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:text="Sign Up"
                android:textColor="@color/darkblue_paw"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- 📥 Input Fields -->
            <EditText
                android:id="@+id/fullNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Full Name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="10dp" />

            <!-- ⚧ Gender -->

            <TextView
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:hint="Gender"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <RadioButton
                    android:id="@+id/genderMale"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:hint="Male"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/genderFemale"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Female"
                    android:textSize="16sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Address"
                android:padding="10dp" />

            <!-- 🔘 Tombol Sign Up -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signupButton"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:backgroundTint="#6489E5"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:paddingTop="0dp"
                android:paddingBottom="2dp" />

            <!-- 📜 Terms and Condition -->
            <TextView
                android:id="@+id/termsText"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/terms_text"
                android:textAlignment="center"
                android:textColor="#999999"
                android:layout_marginTop="2dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🌐 Google & Facebook Buttons -->
    <LinearLayout
        android:id="@+id/socialLogin"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formCard">

        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="45dp"-->
        <!--            android:layout_marginEnd="12dp"-->
        <!--            android:backgroundTint="#FFFFFF"-->
        <!--            app:icon="@drawable/ic_google"-->
        <!--            android:text="Google"-->
        <!--            app:iconTintMode="multiply"-->
        <!--            android:textColor="#000000"-->
        <!--            app:iconSize="40dp" />-->

        <!--        <Button-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:backgroundTint="#FFFFFF"-->
        <!--            android:drawableLeft="@drawable/ic_facebook"-->
        <!--            android:text="Facebook"-->
        <!--            android:textColor="#000000" />-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="GOOGLE"
            android:textAllCaps="false"
            android:textColor="@color/darkblue_paw"
            app:icon="@drawable/ic_google"
            app:iconSize="30dp"
            app:cornerRadius="20dp"
            app:iconTintMode="multiply" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebookButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="FACEBOOK"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:textColor="@color/darkblue_paw"
            app:icon="@drawable/ic_facebook"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

    </LinearLayout>

    <!-- 🔁 Sudah punya akun -->
    <TextView
        android:id="@+id/signinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign in"
        android:textColor="@color/darkblue_paw"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
